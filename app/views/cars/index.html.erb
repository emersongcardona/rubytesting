<p id="notice"><%= notice %></p>

<h1><strong>Cars</strong></h1>

<table>
  <thead>
    <tr>
      <th>Model</th>
      <th>Brand</th>
      <th>Diver</th>
      <th>Code</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
  <table class="table">
    <% @cars.each do |car| %>
      <tr>
        <td><%= car.model %></td>
        <td><%= car.brand %></td>
        <td><%= car.drivers_id %></td>
        <td><%= car.code %></td>
        <td><%= link_to 'Show', car %></td>
        <td><%= link_to 'Edit', edit_car_path(car) %></td>
        <td><%= link_to 'Destroy', car, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<button class="button is-small"> 
<%= link_to 'New Car', new_car_path %>
</button>